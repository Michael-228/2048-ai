{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./app/",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "strictNullChecks": true,
    "moduleResolution": "node"
  },
  "include": ["./app/**/*.ts"]
}
